<%= form_tag sessions_path do %>
	<h2>login</h2>
	<% if flash[:error] %>
		<div><%=flash[:error]%></div>
	<% end %>
	<div>
	   <%= text_field_tag :email, params[:email], placeholder: 'email' %>
	</div>
	<div>
		<p><%= password_field_tag :password, placeholder: 'Password' %></p>
	</div>
	
	<div class="form_div">
	   <%= submit_tag "login"%>
	</div>
<%end%>