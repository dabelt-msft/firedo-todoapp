<%if current_user%>
	<div>
		<ul>
			<%@todos.each do |todo|%>
				<li>
					<span>
						<a href=<%="/users/#{current_user.id}/todos/#{todo.id}"%>> <%=todo.description%></a> 
						<a href=<%="/users/#{current_user.id}/todos/#{todo.id}/edit"%>> edit  |  </a>
						 <%= button_to "delete", {:controller => :todos,
      						:action => 'destroy', :id => todo }, :method => :delete %>
					</span> 
				</li>
			<%end%>
		</ul>
	</div>
	<div>
		<a href=<%="/users/#{current_user.id}/todos/new"%> ><h1>Add new todo item</h1></a>
	</div>
<%end%>